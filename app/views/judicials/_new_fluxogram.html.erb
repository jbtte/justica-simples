<div class="fluxogram my-5">
  <ol class="arrows">
     <li class="color-gray <%= @phase[1] == 0 ? "color-orange" : "color-gray" %>"><a href="#">Início</a></li>
     <li class="<%= if @phase[1] == 1 then "color-orange" elsif @phase[1] > 1 then "color-gray" end %>"><a href="#">Acordo</a></li>
     <li class= "<%= if @phase[1] == 2 then "color-orange" elsif @phase[1] > 2 then "color-gray" end %>"><a href="#">Provas</a></li>
     <li class= "<%= "color-orange" if @phase[1] == 3 %>"><a href="#">Decisão</a></li>
  </ol>
</div>
