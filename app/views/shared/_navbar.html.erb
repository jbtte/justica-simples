<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-logo">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "jsinvert.png", class:"navbar-logo" %>
    <% end %>

  <button class="navbar-toggler navbar-dark bg-dark" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link link-navbar" %>
        </li>

        <li class="nav-item">
          <%= link_to "Meus processos", user_judicials_path(current_user), class: "nav-link link-navbar" %>
        </li>

        <li class="nav-item">
          <%= link_to root_path, class: "nav-link link-navbar"  do %>
            <i class="fas fa-search"></i>
          <% end %>
        </li>

        <li class="nav-item" style="">
          <%= link_to destroy_user_session_path, class: "nav-link link-navbar"  do %>
            <i class="fas fa-sign-out-alt" data-bs-toggle="tooltip" data-bs-placement="top" title="Log out!"></i>
          <% end %>
        </li>

        <li class="nav-item dropdown link-navbar">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item link-navbar" %>
            <%= link_to "Another action", "#", class: "dropdown-item link-navbar" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item link-navbar" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link link-navbar"  do %>
          <i class="fas fa-search"> Buscar processo</i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link link-navbar" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
